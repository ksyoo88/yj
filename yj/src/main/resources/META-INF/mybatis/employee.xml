<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.yj.dao.EmployeeDao">
	<!-- 
		<resultMap />은 컬럼명과 클래스의 변수명을 매핑한다.
		type에는 결과값을 담을 객체의 클래스명
		id에는 <select />의 resultMap에서 사용할 이름
	 -->
	<resultMap type="kr.co.yj.vo.Employee" id="EmployeeMap">
		<result column="employee_id" property="empId"/>
		<result column="first_name" property="firstName"/>
		<result column="last_name" property="lastName"/>
		<result column="job_id" property="jobId"/>
		<result column="department_id" property="deptId"/>
		<result column="salary" property="salary"/>
	</resultMap>
	<select id="getEmployees" resultMap="EmployeeMap">
		select
			employee_id,
			first_name,
			last_name,
			job_id,
			department_id,
			salary
		from
			employees
	</select>
</mapper>